&spi1 {
  compatible = "nordic,nrf-spi";
  status = "okay";
  sck-pin = <31>;
  mosi-pin = <30>;
  miso-pin = <29>;
  cs-gpios = <&gpio0 28 GPIO_ACTIVE_LOW>;
};

&spi2 {
  compatible = "nordic,nrf-spis";
  status = "okay";
  sck-pin = <33>;
  mosi-pin = <34>;
  miso-pin = <35>;
  csn-pin = <36>;
  def-char = <0x00>;
};